        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "max-length": 25
    },
    "keyboard-state": {
    "numlock": false,
    "capslock": true,
    "format": "{icon} {name}",
    "format-icons": {
        "locked": "ÔÑë",
        "unlocked": "ÓÆµ"
    }
    },
    "mpris": {
        "format": "Playing: {player_icon} {title} - {artist}",
