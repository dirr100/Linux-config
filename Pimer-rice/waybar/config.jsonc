        "on-click": "kitty nvim ~/Documentos/notes/keybinds.txt"
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}  {percent}%",
        "format-icons": ["ÔÜÖ", "ÔÜÖ"]
    },
    "battery": {
        "bat": "BAT0",
