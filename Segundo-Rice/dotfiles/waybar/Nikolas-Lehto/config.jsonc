{
    "layer": "top",
    "position": "top",
    "modules-left": [
        "custom/launcher",
        "hyprland/workspaces",
        "cpu",
        "memory"

    ],
    "modules-center": [
        "mpris"
    ],
    "spacing": 4,
    "modules-right": [
        "tray",
        "wireplumber",
        "network",
        "backlight",
        "clock"
    ],
    "backlight": {
    "device": "intel_backlight",
    "format": "{percent}% {icon}",
    "format-icons": ["ÔÜÖ", "ÔÑë"]
    },
    "hyprland/workspaces": {
        "format": "{name}",
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": []
        }
    },
    "hyprland/window": {
        "icon": false,
        "separate-outputs": true,
        "format": "{}"
    },
    "tray": {
        "icon-size": 15,
        "spacing": 7
    },
    "mpris": {
	"format": "PLAYING: {player_icon} {title} - {artist}",
	"format-paused": "PAUSED: {status_icon} {title} - {artist}",
